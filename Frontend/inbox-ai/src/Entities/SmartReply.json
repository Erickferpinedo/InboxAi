{
    "name": "SmartReply",
    "type": "object",
    "properties": {
      "message_id": {
        "type": "string",
        "description": "ID of the message this reply is for."
      },
      "content": {
        "type": "string",
        "description": "The AI-generated reply content."
      },
      "intent": {
        "type": "string",
        "enum": [
          "Helpful",
          "Apologetic",
          "Escalate",
          "Informative"
        ],
        "description": "The intent behind the suggested reply."
      },
      "tone": {
        "type": "string",
        "enum": [
          "Professional",
          "Friendly",
          "Assertive"
        ],
        "default": "Friendly",
        "description": "The tone of the reply."
      },
      "status": {
        "type": "string",
        "enum": [
          "pending_review",
          "sent",
          "edited",
          "discarded"
        ],
        "default": "pending_review"
      }
    },
    "required": [
      "message_id",
      "content",
      "intent"
    ]
  }