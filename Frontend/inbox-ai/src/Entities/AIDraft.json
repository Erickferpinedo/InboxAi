{
    "name": "AIDraft",
    "type": "object",
    "properties": {
      "message_id": {
        "type": "string",
        "description": "ID of the original message this is replying to"
      },
      "platform": {
        "type": "string",
        "enum": [
          "gmail",
          "slack",
          "outlook",
          "linkedin",
          "discord",
          "teams"
        ],
        "description": "Platform where this draft will be sent"
      },
      "recipient": {
        "type": "string",
        "description": "Who this draft is being sent to"
      },
      "subject": {
        "type": "string",
        "description": "Subject line for the draft"
      },
      "content": {
        "type": "string",
        "description": "Generated draft content"
      },
      "tone": {
        "type": "string",
        "enum": [
          "professional",
          "casual",
          "short",
          "long",
          "friendly",
          "formal"
        ],
        "default": "professional",
        "description": "Tone used for the AI generation"
      },
      "confidence_score": {
        "type": "number",
        "description": "AI confidence in the generated response (0-1)"
      },
      "is_sent": {
        "type": "boolean",
        "default": false,
        "description": "Whether this draft has been sent"
      },
      "alternatives": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "content": {
              "type": "string"
            },
            "tone": {
              "type": "string"
            }
          }
        },
        "description": "Alternative draft suggestions"
      }
    },
    "required": [
      "message_id",
      "platform",
      "content"
    ]
  }