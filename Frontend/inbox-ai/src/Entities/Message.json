{
    "name": "Message",
    "type": "object",
    "properties": {
      "platform": {
        "type": "string",
        "enum": [
          "gmail",
          "slack",
          "whatsapp",
          "facebook",
          "teams"
        ],
        "description": "The platform this message originated from."
      },
      "customer_name": {
        "type": "string",
        "description": "Name of the customer."
      },
      "customer_avatar": {
        "type": "string",
        "description": "URL to the customer's profile picture."
      },
      "content_preview": {
        "type": "string",
        "description": "A short preview of the message content."
      },
      "full_content": {
        "type": "string",
        "description": "The full message content."
      },
      "thread_id": {
        "type": "string",
        "description": "ID to group all messages in a conversation."
      },
      "status": {
        "type": "string",
        "enum": [
          "open",
          "snoozed",
          "done"
        ],
        "default": "open",
        "description": "Current status of the conversation."
      },
      "snoozed_until": {
        "type": "string",
        "format": "date-time",
        "description": "When a snoozed message should reappear."
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "AI-generated or manual tags (e.g., Refund, Bug, Urgent)."
      },
      "sentiment": {
        "type": "string",
        "enum": [
          "angry",
          "neutral",
          "happy"
        ],
        "description": "AI-detected sentiment of the message."
      },
      "is_awaiting_reply": {
        "type": "boolean",
        "default": true,
        "description": "Whether this conversation is waiting for a reply from the support team."
      }
    },
    "required": [
      "platform",
      "customer_name",
      "content_preview",
      "full_content"
    ]
  }